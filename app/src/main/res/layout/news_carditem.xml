<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/darker_gray"
    android:layout_marginLeft="@dimen/material_card_spacing"
    android:layout_marginTop="@dimen/material_card_spacing"
    android:layout_marginRight="@dimen/material_card_spacing"
    android:layout_margin="@dimen/material_card_spacing"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="3dp"
    app:cardElevation="2dp">

    <TextView
        android:id="@+id/card_description"
        android:layout_width="224dp"
        android:layout_height="95dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="66dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text=""
        android:textColor="@color/colorPrimaryText"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/cardOpenButton"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginEnd="0dp"
        android:text="@string/defaultOpenButton" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/card_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            android:text="News Item" />
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>